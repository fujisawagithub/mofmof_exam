<p id="notice"><%= notice %></p>

<h1>物件一覧</h1>

<table>
  <thead>
    <tr>
      <th>物件名</th>
      <th>賃料</th>
      <th>住所</th>
      <th>築年数</th>
      <th>備考</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rental_houses.each do |rental_house| %>
    <tr>
      <td><%= rental_house.name %></td>
      <td><%= rental_house.fee %></td>
      <td><%= rental_house.address %></td>
      <td><%= rental_house.age %></td>
      <td><%= rental_house.remarks %></td>
      <td><%= link_to '詳細', rental_house %></td>
      <td><%= link_to '編集', edit_rental_house_path(rental_house) %></td>
      <td><%= link_to '削除', rental_house, method: :delete, data: { confirm: '本当にいいですか?' } %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '物件を登録する', new_rental_house_path %>